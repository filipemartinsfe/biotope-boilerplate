<div class="bio-teaser">
  <div class="teaser"
    data-resources="[{paths: ['components/bioteaser/index.indexBioteaser.js' , 'components/bioteaser/styles/indexBioteaser.css']}]"
    data-init="(function($element) { $element.bioteaserComponent() })"
  >
    <div class="teaser__section">
      <div class="teaser__container">

        {{!-- Teaser --}}
        {{#each teaserSection}}
        <div class="teaser__contentWrap {{reversed}} {{colored}}">
          <div class="teaser__content">
            <div class="teaser__title"> 
              {{ title }}
            </div>
            <div class="teaser__text">
              {{ text }}
            </div>
            <button class="teaser__button">
              {{ button }}
            </button>
          </div>
          <div class="teaser__image"></div>
        </div>

        <div class="teaser__related">
          <div class="teaser__relatedTitle">
            {{relatedTitle}} <span class="teaser__accordionClose">CLOSE</span>
          </div>

          {{bioInclude 'components/accordion/accordion' }}

        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>